{
    "manifest_version": 2,

    "name": "SafeSpace",
    "description" : "A SafeSpace as you browse",
    "version": "1.0",
 "permissions": [
      "activeTab",
      "storage",
      "contextMenus"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "extension.png",
      "default_title": "SafeSpace"
    },

    "commands": {
      "_open_options": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens options"
      }
    },

    "content_scripts": [
      {
        "matches": ["*://*/*", "file:///*"],
        "js": ["safePage.js"],
        "css": ["safePage.css"]
      }
    ],

    "background": {
      "persistent": false,
      "scripts": ["background.js", "contextMenu.js"]
    },

  //    "background": {
  //   "persistent": false,
  //   "scripts": ["background.js"]
  // },

    "options_page": "options.html",

    "options_ui": {
        // Required.
        "page": "options.html",
        // Recommended.
        "chrome_style": true,
        // Not recommended; only provided for backwards compatibility,
        // and will be unsupported in a future version of Chrome (TBD).
        "open_in_tab": true
    },

    "icons": {
      "16": "extension_small.png",
      "128": "extension_big.png"  
    }

   

  }